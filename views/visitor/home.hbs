<style>
  .tags { list-style: none; margin: 0; overflow: hidden; padding: 0; } .tags li
  { float: left; } .tag { background: #eee; border-radius: 3px 0 0 3px; color:
  #999; display: inline-block; height: 26px; line-height: 26px; padding: 0 20px
  0 23px; position: relative; margin: 0 10px 10px 0; text-decoration: none;
  -webkit-transition: color 0.2s; } .tag::before { background: #fff;
  border-radius: 10px; box-shadow: inset 0 1px rgba(0, 0, 0, 0.25); content: '';
  height: 6px; left: 10px; position: absolute; width: 6px; top: 10px; }
  .tag::after { background: #fff; border-bottom: 13px solid transparent;
  border-left: 10px solid #eee; border-top: 13px solid transparent; content: '';
  position: absolute; right: 0; top: 0; } .tag:hover { background-color:
  crimson; color: white; } .tag:hover::after { border-left-color: crimson; }
</style>

<h1 class="text-center mt-4" style="visibility:hidden">Blog</h1>
<!-- cards -->
{{#ifEquals user "admin"}}
  <div class="d-flex flex-wrap container justify-content-between mt-5">

    {{#each blogs}}
      <div class="card mt-4 mb-4" style="width: 18rem;">
        <a href="/one/?post={{this.id}}"><img
            src="/post_images/{{this.photo}}"
            class="card-img-top hq"
            alt="Sunset Over the Sea"
          /></a>
        <div class="card-body">
          <a
            href="/one/?post={{this.id}}"
            class="text-decoration-none text-dark"
          >
            <p class="card-text">{{this.describtion}}</p>
          </a>

        </div>
        <ul class="tags">
          <li><a
              href="/operation/search/?cat={{this.category}}"
              class="tag"
            >{{this.category}}</a></li>
          <li><a href="/" class="tag">Home</a></li>
          <a href="/operation/remove/?post={{this.id}}"><h4>

              <i
                class="fa fa-trash"
                style="margin-left: 60px;"
                aria-hidden="true"
              ></i></h4></a>

        </ul>
      </div>

    {{/each}}

  </div>

{{/ifEquals}}

